{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "WebApiRoute": {
        "ClusterId": "WebApiCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "WebAppRoute": {
        "ClusterId": "WebAppCluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "WebApiCluster": {
        "Destinations": {
          "WebApiClusterDestination01": {
            "Address": "http://webapi:8080"
          }
        }
      },
      "WebAppCluster": {
        "Destinations": {
          "WebAppClusterDestination01": {
            "Address": "http://webapp:80"
          }
        }
      }
    }
  }
}